<%- include ("partials/blog_header") %>
<div class="ui main text container segment" style="margin-top:7.0em;" >
    
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image"  src="<%= blog.image %>" alt="">
            <div class="content"> 
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description ">
                <p><%- blog.body %></p> 
                <!-- <%- %> to execute all the html in ejs file  -->
            </div>
            <div>
                <a class="ui orange basic button" href="/blog/<%= blog._id %>/edit">Edit</a>
                <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>
   
</div>